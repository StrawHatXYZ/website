---
import PageLayout from "@/layouts/Base";
import { Image } from "@astrojs/image/components";
import StrawHats from "../assets/strawhats.jpg";

const meta = {
	title: "About",
	description: "I'm a starter theme for Astro.build",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">About</h1>
		<p>
			We are a bunch of people passionate about transformative power of Emerging Technologies!
		</p>

		<div class="flex justify-center">
			<Image
				src={StrawHats}
				alt="A bunch of pirates passionate about Emerging Technologies!"
				loading="eager"
			/>
		</div>

	</div>
</PageLayout>
