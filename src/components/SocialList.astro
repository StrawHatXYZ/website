		<li>
			<!-- Discord -->
			<a
				class="inline-block p-2 sm:hover:text-link"
				href={SOCIAL_LINKS.discord}
				target="_blank"
				rel="noopener noreferrer"
			>
				<svg
					class="h-6 w-6"
					aria-hidden="true"
					focusable="false"
					xmlns="http://www.w3.org/2000/svg"
