---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello, Future!</h1>
		<p class="mb-4">
			Straw Hat is a research firm is dedicated to evaluating emerging technologies,
			providing in-depth analysis of the latest trends in
			Artificial Intelligence, Blockchain, Cybersecurity, Electric Vehicles and other transformative areas.
			</br> </br>
			We help investors stay ahead of the curve by identifying high-growth opportunities,
			analyzing market trends, and providing strategic insights that enable them to make informed investment decisions.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
