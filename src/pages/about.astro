---
import PageLayout from "@/layouts/Base";
import { Image } from "@astrojs/image/components";
import aboutImg from "../assets/about-astro.png";

const meta = {
	title: "About",
	description: "I'm a starter theme for Astro.build",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">About</h1>
		<p>
			We are a bunch of pirates passionate about transformative power of Emerging Technologies!
		</p>
		<div class="flex justify-center">
			<Image
				src={aboutImg}
				alt="A cartoon cactus looking at the 'Astro.build' logo"
				loading="eager"
			/>
		</div>
		<p>Here are the awesome technologies we work with:</p>
		<ul class="list-inside list-disc">
			<li>Artificial Intelligence</li>
			<li>Blockchain</li>
			<li>Electric Vehicles</li>
		</ul>
	</div>
</PageLayout>
